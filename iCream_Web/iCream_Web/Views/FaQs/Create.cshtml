@model iCream_Web.Models.FaQ

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<br />
<br />


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text-center">
        <h4>FaQ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row text-center">
            @Html.LabelFor(model => model.faq_type,"Type", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-5">
                <select name="customer_type">
                    <option value="1">Frequently</option>
                    <option value="2">Asked</option>
                    <option value="3">Questions</option>
                </select>
            </div>
        </div>

        <div class="form-group row text-center">
            @Html.LabelFor(model => model.faq_nameViewer,"Your Name", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.faq_nameViewer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.faq_nameViewer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row text-center">
            @Html.LabelFor(model => model.faq_email,"Email", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.faq_email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.faq_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row text-center">
            @Html.LabelFor(model => model.faq_phone,"Phone", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.faq_phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.faq_phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row text-center">
            @Html.LabelFor(model => model.faq_text,"Text", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-5">
                <textarea id="faq_text" name="faq_text" rows="3" cols="3" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.faq_text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row text-center">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
