@model IEnumerable<iCream_Web.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!-- Header Start -->
<div class="jumbotron jumbotron-fluid page-header" style="margin-bottom: 90px;">
    <div class="container text-center py-1">
        <h1 class="text-white display-3 mt-lg-5">Book</h1>
        <div class="d-inline-flex align-items-center text-white">
            <p class="m-0"><a class="text-white" href="https://localhost:44362/Home/Index">Home</a></p>
            <i class="fa fa-circle px-3"></i>
            <p class="m-0"><a class="text-white" href="https://localhost:44362/Books/Index">Book</a></p>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Portfolio Start -->
<div class="container-fluid py-2 px-0">
    <div class="container py-3">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <h1 class="section-title position-relative text-center mb-5">Our book library will bring a new experience</h1>
            </div>
        </div>
        <div class="row m-0 portfolio-container">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 p-0 portfolio-item">
                    <div class="position-relative overflow-hidden">
                        <img src="~/UploadsBook/@item.book_img" width="450" height="430" alt="">
                        <div class="col-lg-5">
                            @Html.ActionLink("Details", "Details", new { id = item.book_id })
                        </div>

                    </div>
                </div>
            }
        </div>

    </div>
</div>
<!-- Portfolio End -->
