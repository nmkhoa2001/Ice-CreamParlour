@model iCream_Admin.Models.Admin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}




@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-group text-center">
    <br />
    <br />
    <h2>Login</h2>
    <h4>Admin</h4>
    <hr />
    @if (ViewBag.Error != null)
    {
        <h3 style="color:red">@ViewBag.Error</h3>
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        
        <div class="col-md-10">

            @Html.LabelFor(model => model.admin_id, "Id",htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.admin_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.admin_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        
        <div class="col-md-10">
            @Html.LabelFor(model => model.admin_pass,"Pass", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.PasswordFor(model => model.admin_pass, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.admin_pass, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </div>
</div>
}



